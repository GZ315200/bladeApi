<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.drill.dao.UserDao">

    <resultMap id="userMap" type="User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="usercode" property="usercode" jdbcType="VARCHAR"/>
        <result column="salt" property="salt" jdbcType="VARCHAR"/>
        <result column="locked" property="locked" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="user_column">
      id,
      username,
      password,usercode,salt,locked
    </sql>

    <select id="getAll" resultType="User">
        SELECT
        <include refid="user_column"/>
        FROM tx_user
    </select>

    <select id="getById" resultType="User">
        SELECT
        <include refid="user_column"/>
        FROM tx_user u WHERE u.id = #{id}
    </select>
    <select id="getByUsername" resultType="User">
        SELECT
        <include refid="user_column"/>
        FROM tx_user u WHERE u.username = #{username}
    </select>

    <insert id="insertUser">
        INSERT INTO tx_user(id,username,password,usercode,salt,locked)VALUES
        (#{id},#{username},#{password},#{usercode},#{salt},#{locked})
    </insert>

</mapper>